<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Chat">

    <TextView
        android:id="@+id/speedText"
        android:layout_width="511dp"
        android:layout_height="286dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/chargeTextDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="49dp"
        android:layout_toEndOf="@+id/speedText"
        android:background="@android:color/black"
        android:text="Charge"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/chargeText"
        android:layout_width="144dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="125dp"
        android:layout_toEndOf="@+id/chargeTextDesc"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/currentTextDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chargeTextDesc"
        android:layout_marginStart="14dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/speedText"
        android:background="@android:color/black"
        android:text="Current"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/currentText"
        android:layout_width="128dp"
        android:layout_height="56dp"
        android:layout_below="@+id/chargeText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="134dp"
        android:layout_toEndOf="@+id/currentTextDesc"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/voltageTextDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentTextDesc"
        android:layout_marginStart="18dp"
        android:layout_marginTop="39dp"
        android:layout_toEndOf="@+id/speedText"
        android:background="@android:color/black"
        android:text="Voltage"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/voltageText"
        android:layout_width="123dp"
        android:layout_height="66dp"
        android:layout_below="@+id/currentText"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="131dp"
        android:layout_toEndOf="@+id/voltageTextDesc"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/speedText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="512dp" />

</RelativeLayout>
